{
	"name": "forklify",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
      "start": "npm run build && node build/index.js",
      "start:dev": "concurrently \"npx tsc --watch\" \"nodemon --ext js,ejs -q build/index.js\" \"npm run tailwind:css:dev\"",
      "build": "npx tsc && npm run tailwind:css:build",
      "tailwind:css:dev": "postcss ./src/public/styles/tailwind.css -o ./src/public/styles/style.css --watch",
      "tailwind:css:build": "postcss ./src/public/styles/tailwind.css -o ./src/public/styles/style.css",
      "test": "echo \"Error: no test specified\" && exit 1"
    },
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/ejs": "^3.1.2",
		"@types/express": "^4.17.17",
		"@types/node": "^18.15.3",
		"concurrently": "^7.6.0",
		"nodemon": "^2.0.21",
		"prettier": "^2.8.4",
      "prettier-plugin-tailwindcss": "^0.2.4"
	},
	"dependencies": {
      "autoprefixer": "^10.4.14",
      "dotenv": "^16.0.3",
      "ejs": "^3.1.9",
      "ejs-lint": "^2.0.0",
      "express": "^4.18.2",
      "postcss": "^8.4.21",
      "postcss-cli": "^10.1.0",
      "tailwindcss": "^3.2.7",
      "tailwindcss-elevation": "^2.0.0",
      "typescript": "^4.9.5"
    }
}
